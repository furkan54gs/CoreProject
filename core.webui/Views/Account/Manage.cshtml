@model UserDetailsModel

@section Css
{<style>
    .custombackgroundred {
        background-color: red !important;
    }

    .custombackgroundgreen {
        background-color: green !important;
    }
</style>
}

<h1 class="h3">Edit User</h1>
<hr>
<form asp-controller="Account" asp-action="Manage" method="POST">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
             <input type="hidden" class="form-control" asp-for="UserName">
             <input type="hidden" class="form-control" asp-for="Email">
             <input type="hidden" class="form-control" asp-for="EmailConfirmed">
             <input type="hidden" class="form-control" asp-for="UserId">
            <div class="form-group row m-2">
                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="UserName" disabled>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input
                        class="form-control @(Model.EmailConfirmed ? "custombackgroundgreen" : "custombackgroundred")"
                        asp-for="Email" disabled>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Phone">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <label asp-for="Address" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2">
                <label asp-for="City" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row m-2">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </div>

        </div>
    </div>

</form>

@section Scripts
{
<script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
<script src="/modules/jquery-validation/dist/localization/messages_tr.js"></script>
}